{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@storybook/addon-backgrounds": "^5.3.8",
    "@storybook/addon-centered": "^5.3.8",
    "@storybook/addon-docs": "^5.3.8",
    "@storybook/addon-links": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "@storybook/theming": "^5.3.8",
    "@types/lodash.get": "^4.4.6",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^4.4.2",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-react-displayname": "^0.0.5",
    "babel-plugin-styled-components": "^1.10.7",
    "concurrently": "^5.0.2",
    "csstype": "^2.6.8",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-mdx": "1.6.8",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "faker": "^4.1.0",
    "husky": "^4.2.0",
    "jest": "^25.1.0",
    "jest-haste-map": "^25.1.0",
    "jest-resolve": "^25.1.0",
    "jest-styled-components": "^7.0.0",
    "jsdoc-to-markdown": "^5.0.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-is": "^16.12.0",
    "react-live": "^2.2.2",
    "styled-components": "^5.0.0",
    "typedoc": "^0.16.9",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "lerna bootstrap --ci",
    "build:commonjs": "lerna exec --parallel -- BABEL_ENV=commonjs babel --root-mode upward src --out-dir dist/commonjs --ignore tests,docs --source-maps inline",
    "build:esm": "lerna exec --parallel -- BABEL_ENV=esm babel --root-mode upward src --out-dir dist/esm --ignore tests,docs --source-maps inline",
    "build:watch": "rm -rf ./packages/**/dist && concurrently --names 'commonjs,esm' 'yarn build:commonjs -w' 'yarn build:esm -w'",
    "build": "rm -rf ./packages/**/dist && concurrently --names 'commonjs,esm' 'yarn build:commonjs' 'yarn build:esm'",
    "coverage": "yarn build && jest --coverage",
    "dev": "concurrently --names 'build,storybook' 'yarn build:watch' 'start-storybook -p 5555'",
    "storybook:start": "start-storybook -p 5555",
    "docs": "build-storybook --docs -c .storybook -o ./docs && git add ./docs && git commit -m 'chore(release): docs' && git push origin master",
    "lint:eslint": "lerna exec --parallel -- eslint . -c ./.eslintrc --ext .js,mdx",
    "lint:types": "lerna exec --parallel -- tsc -p ./tsconfig.json",
    "lint": "yarn lint:eslint && yarn lint:types",
    "prepublishOnly": "yarn build",
    "postpublish": "yarn docs",
    "lerna:publish": "lerna publish --conventional-commits -m 'chore(release): publish'",
    "test": "jest",
    "test:ci": "jest --ci --silent"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "sideEffects": false
}
